    Removed unused variables and spaces
-->

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--The base layer image same for all layouts-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Pet Shop Image"
        android:background="@color/shop_background"
        android:scaleType="fitCenter"
        android:src="@drawable/shop_background_u"
        android:visibility="visible"
        tools:ignore="HardcodedText,ImageContrastCheck"
        >
    </ImageView>

    <!--Dims the background-->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33000000" /> <!-- Semi-transparent black -->
</FrameLayout>