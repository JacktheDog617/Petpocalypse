 * Patch Notes:
 *     This is all just generic building of the player profile for easier GUI later 
 */
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- profile picture -->
        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src=""
            android:layout_gravity="center" />

        <!-- button to select profile picture -->
        <Button
            android:id="@+id/select_profile_picture_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Profile Picture"
            android:layout_gravity="center"
            android:layout_marginTop="8dp" />

        <!-- player name -->
        <TextView
            android:id="@+id/player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player Name: Jane Doe"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />

        <!-- love and treats -->
        <TextView
            android:id="@+id/currency_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Love:\n Treats:"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center" />

        <!-- number of pets -->
        <TextView
            android:id="@+id/pets_owned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pets Owned:"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />

        <!-- shop button -->
        <Button
            android:id="@+id/shop_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop"
            android:layout_gravity="center"
            android:layout_marginTop="24dp" />

        <!-- edit profile button -->
        <Button
            android:id="@+id/edit_profile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
